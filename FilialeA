				mussen.verkaufsanzahl++;
				ausgabeBestellungenWOHNZIMMER(mussen.bezeichnung, mussen.nummer, mussen.preis, mussen.verkaufsanzahl);
			}
			else if(i == 1) {
				mussen.bezeichnung = "WOHNZIMMER SET ANATOLIA";
